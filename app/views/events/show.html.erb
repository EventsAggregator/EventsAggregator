<textarea name="comment[testo]" id="comment_testo" class=" h6 fst-italic" style="background-color: #f0f2f5; text-align:center" > 
</textarea>
</form>

<button form="form_create" type="submit" class="btn btn-primary" style=" text-align:center" >crea</button>




  <% @event.comments.each do |comment| %>
    
