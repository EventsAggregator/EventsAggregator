
<p class="notice" style="color: green"> <%= notice %> </p>
<p class="alert" style="color: red" > <%= alert %> </p>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :id, value: @user_registration.id  %>
  <div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="data:image/png;base64,<%= @user_registration.immagine_profilo %>" width="150px" ><span> </span></div>
            <div class="col-sm-8">Carica foto<%= f.file_field :immagine_profilo, class: "form-control" %></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
              <div class="d-flex justify-content-between align-items-center mb-4">
                  <h4 class="text-right">Impostazioni Profilo</h4>
              </div>
              <div class="row mt-2">
                <div class="col-md-6">
                  <%= f.label :nome %>
                  <%= f.text_field :nome, autofocus: true, value: @user_registration.nome %>
                </div>
                <div class="col-md-6">
                  <%= f.label :cognome %>
                  <%= f.text_field :cognome, autofocus: true, value: @user_registration.cognome %>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12"><br />
                  <%= f.label :username %>
                  <%= f.text_field :username, autofocus: true, value: @user_registration.username %>
                </div>
                <div class="col-md-12"><br />
                  <%= f.label :data_nascita %>
                  <%= f.date_field :data_nascita, autofocus: true, value: @user_registration.data_nascita.present? ? @user_registration.data_nascita.strftime("%Y-%m-%d") : nil %>

                </div>
                <div class="col-md-12"><br />
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", value: @user_registration.email %>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
              </div>
              <br/>
              <div class="actions">
                <div class="text-center">
                  <%= f.submit "Salva Modifiche", class:"btn btn-primary" %>
                </div>
               </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<br/>

<% if @user_registration.provider.nil? %>
<%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :id, value: @user_registration.id  %>

  <div class="col-md-12"><br/>
  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
</div>
<div class="col-md-12"><br/>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>
<div class="col-md-12"><br/>
  <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, autocomplete: "current-password" %>
</div>

<br/>
<div class="actions">
  <div class="text-center">
    <%= f.submit "Modifica Password", class:"btn btn-primary" %>
  </div>
 </div>


<% end %> 

<br/>
<% end %>
<h3><div class="text-center">Eventi Preferiti</h3></div>
<% @favorites.each do |favorite| %>
  <div class="text-center">
    <%= favorite.event.id %>
    <%= link_to favorite.event.event_id, event_path(favorite.event.event_id) %>
  </div>
<% end %>

<br/>
<h3><div class="text-center">Eventi a cui Partecipo</h3></div>
<% @partecipants.each do |partecipant| %>
  <div class="text-center">
    <%= partecipant.event.id %>
    <%= link_to partecipant.event.event_id, event_path(partecipant.event.event_id) %>
  </div>
<% end %> 

<br/>
<br/>

<div class="text-center">
<% if !@edit_mode %>

<h3>Cancella Account</h3>

<p>
  <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-primary", data: { confirm: "Are you sure?" }, method: :delete %>
  <% end %>
  <br/>
  <%= link_to "Back", :back, class: "btn btn-primary" %>
</p>
</div>